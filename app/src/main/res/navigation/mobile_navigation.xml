<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="sheridan.sharmupm.restmanagerapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="sheridan.sharmupm.restmanagerapplication.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="sheridan.sharmupm.restmanagerapplication.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/colorDetailFragment"
        android:name="sheridan.sharmupm.restmanagerapplication.ui.detail.MenuDetailFragment"
        android:label="Color detail fragment"
        tools:layout="@layout/fragment_menu_detail" >
        <argument
            android:name="ColorDetailFragmentArgs"
            app:argType="sheridan.sharmupm.restmanagerapplication.model.Menu" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="sheridan.sharmupm.restmanagerapplication.ui.OrderFragment"
        android:label="OrderFragment" />
    <fragment
        android:id="@+id/landingFragment"
        android:name="sheridan.sharmupm.restmanagerapplication.ui.LandingFragment"
        android:label="LandingFragment" />
</navigation>